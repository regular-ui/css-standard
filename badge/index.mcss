@import './core.mcss';

// Component:       `u-badge`
// ========================================================================

.u-badge {
    padding: .2em .6em .3em;
    font-size: 75%;
    line-height: 1;
    background: #aaa;
    color: white;
    $border-radius: .25em;
}



// Color Extends:
// ========================================================================

$u-badge-extend_color(primary, $brand-primary);
$u-badge-extend_color(info, $brand-info);
$u-badge-extend_color(success, $brand-success);
$u-badge-extend_color(warning, $brand-warning);
$u-badge-extend_color(error, $brand-error);
